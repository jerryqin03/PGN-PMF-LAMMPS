# Read restart
read_restart ${read_res}

# Settings

pair_style table spline 9941

pair_coeff 1 1 N20.txt DE_GNP 75.6
pair_coeff 2 2 N100.txt DE_GNP 115.92
pair_coeff 1 2 mixed_potential.txt DE_GNP 95.66

#Neigh_list Calc Frequency

neigh_modify delay 0 every 1 check yes

# Saving Frequency (50 frames)

variable ts_save equal floor(${steps_equ}*0.01)

# Dump
dump 1 all custom ${ts_save} ./equilibration/trajectory/trajectory_${usic}_${trial}.equ.custom type x y z ix iy iz
dump_modify 1 first no sort id
#dump 2 all cfg 50000 ./equilibration/trajectory/ovito/dumpgen.tens_*.cfg mass type xs ys zs fx fy fz

# thermo_style
thermo_style custom step temp press pe density ke etotal lx ly lz xlo xhi ylo yhi zlo zhi vol dt time cpu tpcpu spcpu cpuremain

# run info
timestep ${ts}
thermo ${ts_save}

# fix

fix 1 all momentum 1000 linear 1 1 1 angular
variable T equal ${temp}
fix 2 all nvt temp ${T} 370000 100.0 

run 100000

unfix 2

fix 3 all nvt temp 370000 370000 $(100.0*dt) #iso 1.0 1.0 $(1000.0*dt)

run 200000

unfix 3

fix 4 all nvt temp 370000 ${T} 100.0

run 100000

unfix 4

fix 5 all npt temp ${T} ${T} $(100.0*dt) iso 1.0 1.0 $(1000.0*dt)

run 300000

# run_style 
run_style verlet

# write restart
write_restart ${write_res}

